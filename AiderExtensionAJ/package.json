{
  "name": "AiderExtensionAJ",
  "displayName": "VSCode Aider Extension - AJ",
  "description": "VSCode extension for AI-assisted coding using Aider",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:aiCodingAssistantSidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-coding-assistant.openSidebar",
        "title": "Open AI Coding Assistant"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-coding-assistant",
          "title": "AI Coding Assistant",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "ai-coding-assistant": [
        {
          "type": "webview",
          "id": "aiCodingAssistantSidebar",
          "name": "AI Coding Assistant"
        }
      ]
    },
   "configuration": {
      "title": "Aider Extension AJ",
      "properties": {
        "aiCodingAssistant.provider": {
          "type": "string",
          "default": "gemini",
          "enum": ["openrouter", "gemini", "openai", "anthropic", "groq"],
          "description": "The AI provider to use for the AI Coding Assistant"
        },
        "aiCodingAssistant.model": {
          "type": "string",
          "default": "gemini/gemini-1.5-flash",
          "description": "The model to use for the AI Coding Assistant"
        },
        "aiCodingAssistant.apiKeyName": {
          "type": "string",
          "default": "GEMINI_API_KEY",
          "description": "The API key name for the AI service (will be stored in environment variables)"
        },
        "aiCodingAssistant.apiKeyValue": {
          "type": "string",
          "default": "",
          "description": "The API key value for the AI service (will be stored in environment variables)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "dev": "webpack --mode development",
    "watch": "webpack --watch",
    "watchdev": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "css-loader": "^6.5.1",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-syntax-highlighter": "^15.4.5"
  }
}